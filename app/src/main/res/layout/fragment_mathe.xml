<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">



    <CheckBox
        android:id="@+id/cbAddition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="41dp"
        android:layout_marginRight="243dp"
        android:focusable="false"
        android:padding="10dp"
        android:text="Addition"
        android:textSize="20dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cbMultiplikation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbAddition"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:focusable="false"
        android:padding="10dp"
        android:text="Multiplikation"
        android:textSize="20dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cbSubtraktion"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbAddition"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_toStartOf="@+id/cbDivision"
        android:layout_toLeftOf="@+id/cbDivision"
        android:focusable="false"
        android:padding="10dp"
        android:text="Subtraktion"
        android:textSize="20dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cbDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbAddition"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        android:layout_marginRight="61dp"
        android:focusable="false"
        android:padding="10dp"
        android:text="Division"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnMatlos"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="268dp"
        android:layout_marginLeft="268dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="122dp"
        android:text="LOS" />



</RelativeLayout>