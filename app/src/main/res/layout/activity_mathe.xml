<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mathe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.cemo1.menuwithwelcomescreen.MatheActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbAddition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="69dp"
            android:layout_marginRight="241dp"
            android:focusable="false"
            android:padding="10dp"
            android:text="Addition"
            android:textSize="20dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbMultiplikation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="6dp"
            android:focusable="false"
            android:padding="10dp"
            android:text="Multiplikation"
            android:textSize="20dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbSubtraktion"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cbAddition"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_toStartOf="@+id/cbDivision"
            android:layout_toLeftOf="@+id/cbDivision"
            android:focusable="false"
            android:padding="10dp"
            android:text="Subtraktion"
            android:textSize="20dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbDivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cbMultiplikation"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="6dp"
            android:focusable="false"
            android:padding="10dp"
            android:text="Division"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvObgw"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/cbSubtraktion"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="155dp"
            android:text="Obere Grenzwert :"
            android:textAlignment="center"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/etOGW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cbSubtraktion"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="-55dp"
            android:layout_marginRight="35dp"
            android:ems="10"
            android:inputType="number"
            android:hint="10" />
        <TextView
            android:id="@+id/tvUngw"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/cbSubtraktion"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="155dp"
            android:text="Untere Grenzwert :"
            android:textAlignment="center"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/etUGW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cbSubtraktion"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="-55dp"
            android:layout_marginRight="35dp"
            android:ems="10"
            android:inputType="number"
            android:hint="1" />
        <TextView
            android:id="@+id/tvAufAnz"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/cbSubtraktion"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="155dp"
            android:text="Anzahl der Aufgabe :"
            android:textAlignment="center"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/etAufAnz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cbSubtraktion"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="-55dp"
            android:layout_marginRight="35dp"
            android:ems="10"
            android:inputType="number"
            android:hint="10" />
        <TextView
            android:id="@+id/tvSekund"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/cbSubtraktion"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="155dp"
            android:text="Bearbeitungszeit :"
            android:textAlignment="center"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/etSekund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cbSubtraktion"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="-55dp"
            android:layout_marginRight="35dp"
            android:ems="10"
            android:inputType="number"
            android:hint="10" />

        <Button
            android:id="@+id/Losbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="-95dp"
            android:text="LOS" />


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>

</android.support.v4.widget.DrawerLayout>
